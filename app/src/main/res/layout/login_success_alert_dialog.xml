<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30dp">

<ImageView
    android:id="@+id/logoutIcon"
    android:layout_width="76dp"
    android:layout_height="76dp"
    android:padding="15dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/ic_successfully_green"
    android:background="@drawable/circle_background"
    android:layout_centerHorizontal="true"/>

<TextView
    android:id="@+id/loginSuccess"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="Yeah! Welcome Back"
    android:layout_below="@id/logoutIcon"
    android:layout_marginTop="50dp"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="22sp"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/successConfirmation"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Once again you login successfully into Anglesea app"
        android:layout_below="@id/loginSuccess"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/goToHomeButton"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginTop="23dp"
        android:text="Go to home"
        android:textColor="@color/white"
        android:backgroundTint="#009688"
        app:strokeColor="#009688"
        app:strokeWidth="1dp"
        app:cornerRadius="25dp"
        android:textStyle="bold"
        android:layout_below="@id/successConfirmation"
        android:layout_centerHorizontal="true"
        app:rippleColor="#e8f3f1"/>

</RelativeLayout>

