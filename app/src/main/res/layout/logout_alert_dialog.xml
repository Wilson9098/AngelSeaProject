<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="30dp">

<ImageView
    android:id="@+id/logoutIcon"
    android:layout_width="76dp"
    android:layout_height="76dp"
    android:padding="15dp"
    android:layout_marginTop="5dp"
    android:src="@drawable/ic_logout_green"
    android:background="@drawable/circle_background"
    android:layout_centerHorizontal="true"/>

<TextView
    android:id="@+id/logoutPrompt"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:text="Are you sure to log out of your account?"
    android:layout_below="@id/logoutIcon"
    android:layout_marginTop="55dp"
    android:gravity="center"
    android:textColor="@color/black"
    android:textSize="22sp"
    android:textStyle="bold"
    android:layout_centerHorizontal="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/logoutButton"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginTop="23dp"
        android:text="Log Out"
        android:textColor="@color/white"
        android:backgroundTint="#009688"
        app:strokeColor="#009688"
        app:strokeWidth="1dp"
        app:cornerRadius="25dp"
        android:textStyle="bold"
        android:layout_below="@id/logoutPrompt"
        android:layout_centerHorizontal="true"
        app:rippleColor="#e8f3f1"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/cancelButton"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:layout_marginTop="3dp"
        android:text="Cancel"
        android:textColor="#009688"
        app:backgroundTint="@android:color/white"
        app:strokeColor="#009688"
        app:strokeWidth="1dp"
        app:cornerRadius="25dp"
        android:textStyle="bold"
        android:layout_below="@id/logoutButton"
        android:layout_centerHorizontal="true"
        app:rippleColor="#e8f3f1"/>
</RelativeLayout>

