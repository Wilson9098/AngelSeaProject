<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 继承自MaterialComponents的基础主题 -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- 用于SplashScreenActivity的全屏无标题栏主题 -->
    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 用于loginPage的全屏无标题栏主题 -->
    <style name="LoginPageTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 底部导航视图的样式 -->
    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/greenColor</item>
        <item name="itemTextColor">@color/greenColor</item>
<!--        <item name="background">@color/colorBottomNavBackground</item>-->
<!--        <item name="itemRippleColor">@color/colorBottomNavItemSelected</item>-->
    </style>

</resources>


